{
  "name": "monolithic-website",
  "version": "1.0.0",
  "description": "Website for Engineering @ Monolithic",
  "main": "index.js",
  "scripts": {
    "dev": "npm run docker:up && npm run wait:containers && npm run migration:up && next dev",
    "build": "next build",
    "start": "next start",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "danger": "danger",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "test:unit": "jest --testPathPattern=tests/unit --coverage",
    "test:unit:watch": "jest --testPathPattern=tests/unit --watch",
    "test:integration": "jest --testPathPattern=tests/integration --coverage",
    "test:integration:watch": "jest --testPathPattern=tests/integration --watch",
    "test:integration:ephemeral": "npm run docker:down && npm run dev && npm run test:integration && npm run docker:down",
    "migration:create": "node-pg-migrate -m src/core/database/migrations create",
    "migration:up": "node-pg-migrate -m src/core/database/migrations --envPath .env.development up",
    "wait:containers": "node tests/scripts/wait-containers.js",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down -v"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MonolithicIO/monolithic-website.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MonolithicIO/monolithic-website/issues"
  },
  "homepage": "https://MonolithicIO/monolithic-website/#readme",
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/dotenv": "^6.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.552.0",
    "next": "^15.5.6",
    "next-themes": "^0.4.6",
    "node-pg-migrate": "7.9.1",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "24.9.1",
    "@types/node-pg-migrate": "^2.3.1",
    "@types/pg": "^8.15.6",
    "@types/react": "19.2.2",
    "copy-webpack-plugin": "^13.0.1",
    "danger": "^13.0.4",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tw-animate-css": "^1.4.0",
    "typescript": "5.9.3"
  }
}
