{
  "name": "monolithic-website",
  "version": "1.0.0",
  "description": "Website for Engineering @ Monolithic",
  "main": "index.js",
  "scripts": {
    "dev": "npm run docker:up && npm run wait:containers && npm run migration:up && concurrently -n next,firebase --hide firebase 'next dev' 'npm run firebase:emulator:dirty'",
    "build": "next build",
    "start": "next start",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint": "eslint .",
    "danger": "danger",
    "test": "jest --coverage",
    "test:watch": "jest --watchAll",
    "test:unit": "jest --testPathPattern=tests/unit --coverage",
    "test:unit:watch": "jest --testPathPattern=tests/unit --watch",
    "test:integration": "jest --testPathPattern=tests/integration --runInBand",
    "test:integration:watch": "jest --testPathPattern=tests/integration --watch --runInBand",
    "test:integration:ephemeral": "npm run docker:down && npm run docker:up && npm run wait:containers && npm run migration:up && concurrently -n next,jest -k -s command-jest --hide next 'next dev' 'wait-on http://localhost:3000 && jest --testPathPattern=tests/integration --runInBand'",
    "posttest:integration:ephemeral": "npm run docker:down",
    "migration:create": "node-pg-migrate -m src/core/database/migrations create",
    "migration:up": "node-pg-migrate -m src/core/database/migrations --envPath .env.development up",
    "wait:containers": "node tests/scripts/wait-containers.ts",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down -v",
    "firebase:emulator:dirty": "firebase emulators:start --import=./emulator-data --export-on-exit=./emulator-data",
    "firebase:emulator:clean": "firebase emulators:start",
    "firebase:emulator:erase": "rm -rf emulator-data"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MonolithicIO/monolithic-website.git"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/MonolithicIO/monolithic-website/issues"
  },
  "homepage": "https://MonolithicIO/monolithic-website/#readme",
  "dependencies": {
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/postcss": "4.1.16",
    "@types/dotenv": "6.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "2.1.1",
    "dotenv": "17.2.3",
    "firebase": "12.6.0",
    "lucide-react": "0.552.0",
    "next": "15.5.6",
    "next-themes": "0.4.6",
    "node-pg-migrate": "7.9.1",
    "pg": "8.16.3",
    "postcss": "8.5.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "swr": "2.3.6",
    "tailwind-merge": "3.3.1",
    "tailwindcss": "4.1.16"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/firebase": "^2.4.32",
    "@types/jest": "30.0.0",
    "@types/node": "24.9.1",
    "@types/node-pg-migrate": "2.3.1",
    "@types/pg": "8.15.6",
    "@types/react": "19.2.2",
    "concurrently": "9.2.1",
    "copy-webpack-plugin": "13.0.1",
    "danger": "13.0.4",
    "eslint": "9.39.1",
    "eslint-config-next": "16.0.1",
    "jest": "29.7.0",
    "prettier": "3.6.2",
    "ts-node": "10.9.2",
    "tw-animate-css": "1.4.0",
    "typescript": "5.9.3",
    "wait-on": "9.0.3"
  }
}
